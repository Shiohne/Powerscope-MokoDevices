<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/blue_2681ff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="back"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Modify power on status"
            android:textColor="@color/white_ffffff"
            android:textSize="18sp" />


        <View
            style="@style/divider_line"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_999999" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_power_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_switch_off"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableLeft="@drawable/radiobtn_conn"
            android:drawablePadding="10dp"
            android:paddingLeft="24dp"
            android:text="Switch off" />

        <RadioButton
            android:id="@+id/rb_switch_on"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableLeft="@drawable/radiobtn_conn"
            android:drawablePadding="10dp"
            android:paddingLeft="24dp"
            android:text="Switch on" />

        <RadioButton
            android:id="@+id/rb_last_status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableLeft="@drawable/radiobtn_conn"
            android:drawablePadding="10dp"
            android:paddingLeft="24dp"
            android:text=" Revert to last status" />

    </RadioGroup>
</LinearLayout>
